<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
   <li class="list{{this.id}}">
     <p>
      <div class="burgerIcon"></div>
      <div class="burgerName">{{this.burger_name}}</div>
        <div class="buttonDiv">
          <button data-burgerid="{{this.id}}" class="delBurger">Have Burger</button>
        </div>
      </p>
     </li>
  {{/each}}
</ul>
    
<h2>Create a Burger</h2>

<form id="createBurger" class="button-size">
  <textarea type="text" name="burger"></textarea>
  <button type="submit">Save Burger</button>
</form>

